<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_profile"
            android:text="Perfil"
            app:icon="@drawable/baseline_face_24"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            android:textColor="@color/black"
            android:backgroundTint="@color/carviOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notify"
            app:icon="@drawable/baseline_notifications_24"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            android:text="Notificaciones"
            android:textColor="@color/black"
            android:backgroundTint="@color/carviOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"></com.google.android.material.button.MaterialButton>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container_Fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_F1"
            android:text="1"
            app:icon="@drawable/baseline_home_24"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            android:textColor="@color/black"
            android:backgroundTint="@color/carviOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_F2"
            android:text="2"
            app:icon="@drawable/baseline_calendar_month_24"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            android:textColor="@color/black"
            android:backgroundTint="@color/carviOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_F3"
            android:text="3"
            app:icon="@drawable/baseline_menu_book_24"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            android:textColor="@color/black"
            android:backgroundTint="@color/carviOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_F4"
            android:text="4"
            app:icon="@drawable/baseline_celebration_24"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            android:textColor="@color/black"
            android:backgroundTint="@color/carviOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_F5"
            android:text="5"
            app:icon="@drawable/baseline_more_horiz_24"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:backgroundTint="@color/carviOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.google.android.material.button.MaterialButton>

    </LinearLayout>
</LinearLayout>