<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="INICIO"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:fontFamily="sans-serif"
                android:text="Hola NOMBRE ESTUDIANTE"></TextView>

            <!--CARTA DE TAREAS-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/carviFive">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TAREAS"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="INGLÉS - Adverbios"
                            android:textSize="13sp"></TextView>

                        <Switch
                            android:id="@+id/sw_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></Switch>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="MATEMÁTICA - Geomatría analítica"
                            android:textSize="13sp"></TextView>

                        <Switch
                            android:id="@+id/sw_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></Switch>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CIENCIA Y TECNOLOGÍA - Masas atómicas"
                            android:textSize="13sp"></TextView>

                        <Switch
                            android:id="@+id/sw_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></Switch>
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--CARTA DE FOROS-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/carviFive">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FOROS"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/cb_foro1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Matemática - Semana 1"></CheckBox>

                        <CheckBox
                            android:id="@+id/cb_foro2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comunicación - Semana 1"></CheckBox>

                        <CheckBox
                            android:id="@+id/cb_foro3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ciencias Sociales - Semana 1"></CheckBox>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
